{
  "outputDirectory": "apps/dashboard/dist",
  "buildCommand": "npm run build",
  "functions": {
    "api/**/*.ts": {
      "runtime": "@vercel/edge"
    }
  },
  "rewrites": [
    { "source": "/api/gateway/(.*)", "destination": "/api/gateway/[...path]" },
    { "source": "/(.*)", "destination": "/index.html" }
  ]
}
